<div id="banner" class="page-header">
    <h1>Interests!</h1>
</div>

<div class="container">
    <div id="interestList" class="d-flex flex-wrap">
        {{#each interests}}
        <div id="listCards" class="card m-3">
            <div class="card-body">
                <a href="/interests/{{id}}">{{this.interest}}</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<div id="buttons" class="d-flex justify-content-center pt-5">
    <a href="/interests/new" class="btn btn-success btn-lg success p-4" role="button" aria-pressed="true">Create a new
        interest!</a>
</div>