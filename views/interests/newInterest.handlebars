<div class="banner" class="page-header">
    <h1>Add a New Interest</h1>
</div>


<div class="container">
    <div class="row">

        <div style="width: 30%; margin: 25px auto;">
            <form action="/interests" method="POST">
                <div class="form-group">
                    <textarea class="form-control" id="interest" rows="3" name="interest"
                        placeholder="Enter the name of the interest here"></textarea>
                </div>
                <div class="form-group">
                    <textarea class="form-control" id="interest_desc" rows="3" name="interest_desc"
                        placeholder="Describe the interest"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block" id="newButton" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
</div>