<div id="banner" class="page-header">
  <h1>Attendee's!</h1>
</div>

<div id="usersList" class="d-flex flex-wrap justify-content-center">

  {{#each users}}
  <div id="listCards" class="card m-3">
    <div class="card-body">
      <a href="/users/{{this.id}}">{{this.attendee_name}}</a>

    </div>
  </div>
  {{/each}}
</div>

<div id="buttons" class="d-flex justify-content-center pt-5">
  <a href="/user/new" class="btn btn-success btn-lg success p-4" role="button" aria-pressed="true">Create a
    new Attendee!</a>
</div>