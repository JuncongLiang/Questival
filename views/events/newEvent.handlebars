{{!-- form to create a new event. Connected with events_controller.js (router.get) --}}

<form action="/events" method="POST" <h3> Add a new event!</h3>

    {{!-- Form to add a new event - this can be used for users and interests as well --}}

    <div class="form-group">
        <label for="exampleFormControlTextarea1">Enter the name of the event:</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="event_name"></textarea>
    </div>

    <div class="form-group">
        <label for="exampleFormControlTextarea1">Briefly describe the event:</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="event_desc"></textarea>
    </div>

    <div class="form-group">
        <label for="exampleFormControlTextarea1">Where is the event located (hotel, city, state)?</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="event_location"></textarea>
    </div>

    <div class="form-group">
        <label for="exampleFormControlTextarea1">When is the event being held?</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="event_dates"></textarea>
    </div>


    {{!-- Button to submit the info, the burger HW uses this process, too. --}}
    <button id="newButton" type="submit">Submit</button>

</form>